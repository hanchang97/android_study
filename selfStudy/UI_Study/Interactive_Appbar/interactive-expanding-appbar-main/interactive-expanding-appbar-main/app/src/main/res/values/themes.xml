<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#303030</item>
        <item name="colorPrimaryDark">#101010</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">#40FFFFFF</item>
    </style>

    <style name="AppTheme.CollapsingToolbarTitle.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.CollapsingToolbarTitle.Collapsed" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.CollectionName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>